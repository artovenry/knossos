svg#top-switch(viewBox="0 0 64 64")
  path#top-switch-outer-circle(
    d="M32 12 A 20 20 0 1 1 32 52 A 20 20 0 1 1 32 12"
    stroke-dasharray="125.66"
    stroke-dashoffset="125.66"
  )
    animate(
      attributeType="XML" attributeName="stroke-dashoffset"
      from="125.66" to="0" dur="1200ms" begin="7500ms" fill="freeze"
    )
  g#top-switch-upper
    circle(cx=0 cy=-6 r=2)
    line(x1= 0 y1= -6 x2= 0 y2= 10)
    animateMotion(dur="1200ms" begin="7500ms" fill="freeze" rotate="auto"): mpath(xlink:href="#top-switch-outer-circle")

  g#top-switch-lower(opacity=0)
    circle(cx= 32 cy= 30 r= 2)
    line(x1= 32 y1= 30 x2= 32 y2= 42)
    animate(
      attributeType="XML" attributeName="opacity"
      from=0 to=1 dur="1s" begin="11500ms" fill="freeze"
    )
    animateTransform(
      attributeType="XML" attributeName="transform" type="translate"
      from="0 -32" to="0 0" dur="1s" begin="11500ms" fill="freeze"
    )
